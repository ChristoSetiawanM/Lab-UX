<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1F2937"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/animeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Black Clover"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Image and details -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/animeImage"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/animecover2"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/animeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: TV"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeEpisodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodes: 170"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeDemographic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demographic: Shounen"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animePremiered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premiered: Fall 2017"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeStudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio: Pierrot"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre: Action, Magic, Adventure, Fantasy"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source: Manga"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/animeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: PG 13"
                    android:textColor="#FFFFFF"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="4"
                        android:isIndicator="true"
                        android:progressTint="@android:color/holo_orange_light"/>

                    <TextView
                        android:id="@+id/animeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.14"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#444" />

        <!-- Synopsis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/animeSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asta and Yuno were abandoned at the same church..."
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp"
            android:maxLines="3"  android:ellipsize="end" /> <TextView
            android:id="@+id/btnReadMoreSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:textColor="#D4A017" android:layout_gravity="end" android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#444" />

        <Button
            android:id="@+id/btnWriteReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Your Review"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            app:backgroundTint="@null"  android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="100" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5" />

            <LinearLayout
                android:id="@+id/reviewContainer"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:background="@drawable/border_background" /> <!-- ADD THIS LINE -->

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
