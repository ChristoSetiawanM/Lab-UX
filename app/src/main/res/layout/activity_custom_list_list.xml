<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".list.CustomListList">

    <TextView
        android:id="@+id/angka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gambarCoverList"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@id/angka"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/judulList"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Judul"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/gambarCoverList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/genreList"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/gambarCoverList"
        app:layout_constraintTop_toBottomOf="@id/judulList"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/synopsisList"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textSize="12dp"
        android:justificationMode="inter_word"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/gambarCoverList"
        app:layout_constraintTop_toBottomOf="@id/genreList"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>