<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2937"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/animeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tokyo Revengers"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/animeImage"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/animecover8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/animeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type: TV"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeEpisodes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodes: 37"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeDemographic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demographic: Shounen"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animePremiered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premiered: Spring 2021"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeStudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio: Lidenfilms"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre: Action, Drama, Supernatural"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Source: Manga"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/animeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: R - 17+"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="@android:color/holo_orange_light"
                        android:rating="4.0"
                        android:stepSize="0.1" />

                    <TextView
                        android:id="@+id/animeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="8.09"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#444" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Synopsis"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/animeSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Takemichi Hanagaki's life is at an all-time low..."
            android:textColor="#FFFFFF"
            android:justificationMode="inter_word" />

        <TextView
            android:id="@+id/btnReadMoreSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="Read More"
            android:textColor="#D4A017"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#444" />

        <Button
            android:id="@+id/btnWriteReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Write Your Review"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5" />

            <LinearLayout
                android:id="@+id/reviewContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="95"
                android:background="@drawable/border_background"
                android:orientation="vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2.5" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
